#!/bin/sh

BASENAME=`basename $0`
MONITOR="false"
DETACHED_OPTION=""
CONFIG=""
COOKIE="cookie"
if [ -z "$ERL" ]; then
   ERL=erl
fi

usage() {
   echo "Usage: $BASENAME [options]";
}

for _option
do
   # If the previous option needs an argument, assign it.
   if test -n "$_prev"; then
      eval "$_prev=\$_option"
      _prev=
      continue
   fi

   case "$_option" in
   -*=*) _optarg=`echo "$_option" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
   *) _optarg= ;;
   esac

   case "$_option" in

   --config=*)
      CONFIG="$_optarg" ;;

   --cookie=*)
      COOKIE="$_optarg" ;;

   --detached | -d)
      DETACHED_OPTION="-detached" ;;

   --help | -h)
      usage
      cat << EOF

Options:
      --config=FILE     use this config file
      --cookie=COOKIE   use this cookie
   -d,--detached        starts the service detached from the system console
   -h,--help            display this message
   -m,--monitor         run monitor

EOF
   exit 0;;

   --monitor | -m)
      MONITOR="true" ;;

   --* | -* ) {
      echo "$BASENAME: illegal option $_option; use --help to show usage" 1>&2;
      exit 1;
      };;
   * )
      args="$args$_option " ;;

   esac
done

if [[ $CONFIG = `echo $CONFIG | sed 's,^\/.*,,g'` ]]; then
    CONFIG=$PWD/$CONFIG;
fi

if test -f "$CONFIG"; then
    CONFIG="-config $CONFIG";
else
    CONFIG=""
fi

cd `dirname $0`;
ROOT=`dirname "$PWD" | sed -e 's, ,\\\\ ,g'`;
cd "$PWD";

ERL_OPTS="
    -setcookie $COOKIE \
    -pa $ROOT/ebin \
    -sname websocket@localhost \
    $CONFIG
    -s websocket"

if [ "$MONITOR" = "false" ]; then
    eval $ERL $ERL_OPTS $DETACHED_OPTION -noshell
else
    eval $ERL $ERL_OPTS -boot start_sasl -run appmon
fi

exit 0;
